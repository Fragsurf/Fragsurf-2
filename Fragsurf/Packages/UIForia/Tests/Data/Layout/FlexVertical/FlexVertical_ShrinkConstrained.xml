<UITemplate>

    <Style>

        style container {
            FlexLayoutDirection = Vertical;
            PreferredSize = 100px 600px;
        }

        style child {
            PreferredSize = 300px;
            BackgroundColor = red;
            FlexItemShrink = 1;
        }
        
        style min {
            MinHeight = 250px;
        }
        

    </Style>

    <Contents style="container">
        <Group style='child'/>
        <Group style='child min'/>
        <Group style='child'/>
    </Contents>
</UITemplate>