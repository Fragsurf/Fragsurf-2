<UITemplate>

    <Style>

        style container {
            FlexLayoutDirection = Horizontal;
            PreferredSize = 600px 100px;
        }

        style child {
            PreferredSize = 300px;
            BackgroundColor = red;
            FlexItemShrink = 1;
        }
        
        style min {
            MinWidth = 250px;
        }        

    </Style>

    <Contents style="container">
        <Group style='child min'/>
        <Group style='child min'/>
        <Group style='child min'/>
    </Contents>
</UITemplate>