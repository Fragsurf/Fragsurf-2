<UITemplate>

    <Style>

        style container {
            FlexLayoutDirection = Horizontal;
            PreferredSize = 600px;
            BackgroundColor = Yellow;
            FlexLayoutWrap = WrapHorizontal;
        }

        style child {
            PreferredSize = 200px 100px;
            BackgroundColor = red;
        }
        
        style grow {
            FlexItemGrow = 1;
            BackgroundColor = green;
            PreferredSize = 300px 100px;
        }
        
    </Style>

    <Contents style="container">
        <Group style='child'/>
        <Group style='child'/>
        <Group style='grow'/>
        <Group style='child'/>
        <Group style='child'/>
    </Contents>
</UITemplate>