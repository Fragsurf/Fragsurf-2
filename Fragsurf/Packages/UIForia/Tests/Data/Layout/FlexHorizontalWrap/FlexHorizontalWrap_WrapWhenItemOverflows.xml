<UITemplate>

    <Style>

        style container {
            FlexLayoutDirection = Horizontal;
            PreferredSize = 600px;
            BackgroundColor = Yellow;
            FlexLayoutWrap = WrapHorizontal;
        }

        style child {
            PreferredSize = 200px 100px;
            BackgroundColor = red;
        }
        
        style bigger {
            PreferredSize = 300px 100px;
            BackgroundColor = blue;
        }
        
    </Style>

    <Contents style="container">
        <Group style='child'/>
        <Group style='child'/>
        <Group style='bigger'/>
        <Group style='child'/>
    </Contents>
</UITemplate>