<UITemplate>

    <Style>

        style container {
            FlexLayoutDirection = Horizontal;
            PreferredSize = 100px;
            BackgroundColor = Yellow;
            FlexLayoutWrap = WrapHorizontal;
            FlexLayoutGap = 10;
        }

        style child {
            PreferredSize = 100px 100px;
            BackgroundColor = red;
        }
        
    </Style>

    <Contents style="container">
        <Group style='child'/>
    </Contents>
</UITemplate>